{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "outDir": "build",
    "declaration": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
